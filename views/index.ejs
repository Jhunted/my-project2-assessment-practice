<!DOCTYPE html>
<html>
  <head>
    <title>Unit 2 Assessment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
    
    <form action="/" method="POST" autocomplete="off">
      <input type="text" name="todo">
      <button type="submit">ADD TO DO</button>
    </form>
    <ul>
      <% if (todos.length > 0) { %>
      <% todos.forEach(function(t, idx) { %>
        <li>
          <form action="/<%= idx %>?_method=DELETE" method="POST" class="delete-form">
            <button type="submit">X</button>
          </form>
          <li="/todos/<%= idx %>"><%= t.todo %></li>
            - 
          <%= t.done ? 'done' : 'not done' %>
        </li>
      <% }); %>
      <% } else { %>
        <p>There are no To Dos yet!</p>
      <% } %>
    </ul>
  </body>
</html>
